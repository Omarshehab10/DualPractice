
@inject Lean.Framework.Entities.Integration.SehaIntegrationConfig config;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Unauthorized</title>
    <style>
        table {
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            font-size: 3em;
            color: #777;
            font-family: 'Source Code Pro';
        }

        table, tr, td {
            width: 100%;
            height: 100%;
        }

        button {
            text-decoration: none;
            background: #00A896;
            color: #FFF!important;
            display: block;
            width: 300px;
            height: 90px !important;
            line-height: 90px;
            font-size: 0.6em !important;
            transition: all 0.5s;
            border: 5px solid #00A896 !important;
        }

            button:hover {
                color: #00A896 !important;
                background: #FFF !important;
            }

            button:active {
                color: #FFF !important;
                background: #00A896 !important;
            }
    </style>
</head>
<body>
    <table>
        <tr>
            <td align="center" valign="middle">
                <img src="~/Content/Icon/lock.png" style="width:7%;" />
                <br />
                @if (ViewBag.source != null && ViewBag.source == 1)
                {
                    <b>لا تملك الصلاحيات لاتمام العملية</b>
                }
                @if (ViewBag.source != null && ViewBag.source == 2)
                {
                    <b>الخدمة موقوفة</b>
                }

                @if (ViewBag.source != null && ViewBag.source == 3)
                {
                    <b>انتهت الجلسة الرجاء تسجيل الدخول </b>
                }
                @if (ViewBag.source != null && ViewBag.source == 4)
                {
                    <b>لا تملك الصلاحيات لاتمام العملية </b>
                }
                <br /><br />
                <button onclick="GoToHome()"><b>الصفحة الرئيسية</b></button>
                <br />
            </td>
        </tr>
    </table>
</body>
</html>
<script>
    function GoToHome() {
        top.window.location.href = "@config.BaseUrl"
    }
</script>
